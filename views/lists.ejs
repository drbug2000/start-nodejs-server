<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="/main.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body class="grey-bg">
    
    <%- include('nav.ejs') %>

    <div class="white-bg">
    <%    for (let i = 0; i<posts.length ;i++){ %>
        <%if(i >= posts.length ){ break; } %>
    <div class="list-box">
        <!--<p><%=i%></p>-->
        <h4><a href="../detail/<%= posts[i]._id %>"><%= posts[i].title %></a></h4>
        <p><%= posts[i].content %></p>
        
    </div>
<% } %>
    
    </div> 
    <div>
        <%    for (let i = 0; i<pages.count/5 ;i++){ %>
            <% if(i+1==pages.current){ %>
                <button type="button" class="btn btn-secondary" disabled> <%=i+1%></button>
            
            <%  } else {  %>
                <button type="button" onclick="gopage(<%= i+1 %>)" class="btn btn-outline-secondary"><%=i+1%></button>
            <%  } %>
        <%  }   %>
    </div>
    
    <script>
    function gopage(page){
        location.href="../list/"+page;
    }
    console.log("posts.pages"+"<%=posts.pages%>")
    console.log("pages"+"<%=pages%>")
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

</html>