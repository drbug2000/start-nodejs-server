<body class="grey-bg">
    
    <%- include('nav.ejs') %>

    <div class="detail-bg">
        <h4><%= post.title %></h4>
        <p><%= post.content %></p>
        
        <!--<p><a href="../edit/<%=post._id%>">수정하기</a></p>
        <p><a href="../edit/<%=post._id%>">수정하기</a></p>-->
        <button type="button" onclick="edit()" class="btn btn-outline-secondary">수정</button>
        <button type="button" onclick="askDelete()" class="btn btn-outline-danger">삭제</button>
    </div> 

<script>
    function edit(){
        location.href="../edit/<%=post._id%>";
        //location.replace("../edit/<%=post._id%>")

    }

    function askDelete(){

        if (window.confirm("이 게시물을 삭제하시겠습니까?")) {
            fetch("../edit/<%=post._id%>",{
            method : "DELETE",
            headers : { 'Cotent-Type' : 'application/json' },
            body : { }
            }
            )
            //이 부분이 근데 순서대로 이뤄지지 않을 수도 있을 것 같다
            //콜백 함수로 구현 해야 할듯
            //삭제 요청 -> 삭제 확인 -> 확인 창 출력 -> /list 페이지로 이동
            location.replace("../list")

        } else {
            console.log("취소. 변화 없음");
        }

    }

</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

